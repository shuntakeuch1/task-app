<% provide(:title, 'Sign up') %>
<style type="text/css">
 body {
     background-color: #DADADA;
 }
 body > .grid {
     height: 100%;
 }
 .image {
     margin-top: -100px;
 }
 .column {
     max-width: 450px;
 }
</style>
<div class="ui middle aligned center aligned grid">
    <div class="column">
        <h2 class="ui teal image header">
            <div class="content">
                Sign Up New Account
            </div>
        </h2>
        <%= render 'shared/error_messages' %>
        <!-- <div class="ui error message"></div> -->
        <%= form_for(@user, html: {class:"ui large form"}) do |f|  %>
            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <%= f.text_field :name, placeholder: "Your Name" %>
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <%= f.email_field :email, placeholder: "E-mail address" %>
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <%= f.password_field :password ,placeholder: "Password" %>
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <%= f.password_field :password_confirmation ,placeholder: "Confirmation" %>
                    </div>
                </div>
                <%= f.submit "Create my account",class:"ui fluid large teal submit button" %>
            </div>


        <% end %>

        <div class="ui message">
            Login to us?
            <%= link_to "Sign in now!",login_path %>
        </div>
    </div>
</div>

